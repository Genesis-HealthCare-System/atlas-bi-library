@model Data_Governance_WebApp.Pages.Reports.IndexModel
@{
    var m = Model ?? ViewBag;
}
@if (m.ReportMaintLogs.Count > 0)
{
    <h3 class="pageSection-title">Maintenance Logs</h3>
    @foreach (var log in m.ReportMaintLogs)
    {
        <div class="maint-log">
            <div class="maint-logHeader">
                <h6><strong>@log.Maintainer</strong><span class="text-muted"> · @log.Date</span></h6>
                @if(@log.Status != null){
                <h6>
                    <strong>@log.Status</strong>
                </h6>
                }
            </div>
            @if (log.Comment != null)
            {
                <div class="maint-logBody">
                    <div class="markdown">
                        @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(log.Comment))
                    </div>
                </div>
            }
        </div>
    }
}
