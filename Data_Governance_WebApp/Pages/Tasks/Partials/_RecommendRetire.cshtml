<div>
    <span class="text-light">Reports with red outline have not been reviewed in the last 6 months.</span>
    @if (ViewBag.RecommendRetire.Count == 0)
    {
        <p><br />No reports to show.</p>
    }

    @foreach (var t in ViewBag.RecommendRetire)
    {
        <div>
            <a href="/reports?id=@t.ReportId">@t.Name</a>
            <span class="text-light">&nbsp;&middot;&nbsp;Recommended by @t.FullName on @t.MaintenanceDateString</span>
            @if (t.Comment != null)
            {
                <div class="markdown">
                    @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(t.Comment))
                </div>
            }
        </div>
    }
</div>
