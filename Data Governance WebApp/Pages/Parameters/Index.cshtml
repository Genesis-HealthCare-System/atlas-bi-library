@page
@model Data_Governance_WebApp.Pages.Parameters.IndexModel

@{
    Layout = HttpContext.Request.Headers["x-requested-with"] == "XMLHttpRequest" ? "../Shared/_AjaxLayout.cshtml" : "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Parameters";
}

<h2 class="page-title">@ViewData["Title"]</h2>
<div class="tab">
    <a class="tab-lnk active" href="#reportfields">Report Fields</a>
    <a class="tab-lnk" href="#initiativeproject">Initiative & Project Fields</a>
    <a class="tab-lnk" href="#globalsettings">Global Settings</a>
</div>
<div class="tab-cnt">
    <div class="tab-dta active" id="reportfields">
        <div class="card-columns" style="columns:2">
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=OrganizationalValueList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=EstimatedRunFrequencyList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=FragilityList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=FragilityTagList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=MaintenanceScheduleList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=MaintenanceLogStatusList"></div>
        </div>
    </div>
    <div class="tab-dta" id="initiativeproject">
        <div class="card-columns" style="columns:2">
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=MilestoneTemplateList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=FinancialImpactList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=StrategicImportanceList"></div>
            <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=DpContactList"></div>
        </div>
    </div>
    <div class="tab-dta" id="globalsettings">
        <div class="card border-0" data-ajax="yes" data-url="/parameters?Handler=GlobalSettings"></div>
    </div>
</div>