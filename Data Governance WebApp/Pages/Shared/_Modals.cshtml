<div class="mdl" id="requestAccessModal" tabindex="-1">
  <div class="mdl-d">
    <div class="mdl-c">
      <div class="mdl-h">
        <h5 class="mdl-t">Request Report Access</h5>
        <button type="button" class="close" data-dismiss="mdl"><span>&times;</span></button>
      </div>
      <div class="mdl-b">
        You are requesting access to "<span class="report-name-clean"></span>" in Epic.
        <br>
        Please select your director
        <input type='dynamic-dropdown' id="director-name" search-area='director' />
      </div>
      <div class="mdl-f">
        <button type="button" class="btn btn-primary request-access" report-name="">Submit</button>
      </div>
    </div>
  </div>
</div>

<div class="mdl " id="shareModal" tabindex="-1">
  <div class="mdl-d mdl-new-mail">
    <div class="mdl-c">
      <div class="mdl-h">
        <h5 class="mdl-t">Share this page</h5>
        <button type="button" class="close" data-dismiss="mdl"><span>&times;</span></button>
      </div>
      <div class="mdl-b ">
        <div class="mlbx-shareMsg">
            <form class="mlbx-newMsgForm" action="/mail?handler=SendMail" method="post">
			        <div>
				        <input type="hidden" id="convid" />
        				<button type="submit" class="mlbx-newMsgSend">
					        <i class="far fa-paper-plane fa-lg"></i>
				        </button>

                  <div class="mlbx-newMsgSender">
                    <span>From:</span><span>@ViewBag.Fullname (you)</span></div>
                  <div class="mlbx-dvdr"></div>
                  <div class="mlbx-newMsgRecip">
                    <span>To:</span><select id='new_msg_dynamic-dropdown' class="slim" id="user" search-area='UserSearchMail' placeholder=" " ></select></div>
                  <div class="mlbx-dvdr"></div>
                  <div class="mlbx-newMsgSubj">
                    <span>Subject:</span><div class="mlbx-newMsgSubjIpt" contenteditable="true"></div>
                  </div>
                  <div class="mlbx-dvdr"></div>
              </div>
              <div class="mlbx-newMsgMsgBx">
                  <div class="mlbx-newMsgMsg" contenteditable="true"></div>
                </div>
            </form>
        </div>
    </div>
    </div>
  </div>
</div>


<div class="mdl" id="reportProblem" tabindex="-1">
  <div class="mdl-d">
    <div class="mdl-c">
      <div class="mdl-h">
        <h5 class="mdl-t">Report A Problem</h5>
        <button type="button" class="close" data-dismiss="mdl"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="mdl-b">
        <h4>Please describe the problem:</h4>
        <textarea class="form-control" name="description"></textarea>
      </div>
      <div class="mdl-f">
        <button type="submit" class="btn btn-primary report-problem">Submit</button>
      </div>
    </div>
  </div>
</div>

<!-- profile modal -->
<div class="mdl" id="profile-modal" tabindex="-1">
    <div class="mdl-d" style="max-width:70%">
        <div class="mdl-c">
            <div class="mdl-h">
                <h5 class="mdl-t">Report Profile</h5>
                <button type="button" class="close" data-dismiss="mdl"><span>&times;</span></button>
            </div>
            <div class="mdl-b"></div>
            <div class="mdl-f">
                <button type="button" class="btn btn-secondary" data-dismiss="mdl">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="mdl" id="image-modal" tabindex="-1">
    <div class="mdl-d img-modal-lg" data-dismiss="mdl">
        <div class="mdl-c">
            <div class="mdl-b">
                <div class="row">
                    <div class="col">
                        <button type="button" class="close pb-3" data-dismiss="mdl"><span>&times;</span></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <img src="" class="imagepreview img-thumbnail" style="max-width: 100%; max-height:100%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
