@model Data_Governance_WebApp.Pages.Terms.IndexModel

<h3>Linked Reports</h3>

<div class="table-responsive">
    <table class="table sort">
        <thead>
            <tr>
                <th>Report Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.RelatedReports)
            {
                <tr>
                    <td>
                        <a  href="\reports?id=@s.Id">@s.Name</a>
                    </td>
                    <td>
                        @if (s.Url != null)
                        {
                            <a href="@s.Url">Run Report</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>