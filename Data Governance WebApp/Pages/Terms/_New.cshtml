@model Data_Governance_WebApp.Pages.Terms.IndexModel

<div class="clps" id="newCollapse">
    <div class="card card-body bg-light mb-4" id="">
        <form asp-page-handler="NewTerm" method="post">
            <h3 class="d-flex justify-content-between">
            	<span>New Term</span>
            	<div class="button-group">
            		<button class="btn btn-link" type="button" data-toggle="clps" data-target="newCollapse">
                		<i class="fas fa-times fa-lg"></i>
            		</button>
            		<button class="btn btn-link" type="submit">
                		<i class="fas fa-save fa-lg"></i>
            		</button>
        		</div>
            </h3>
			<h5 class="pt-2">Name</h5>
		    <input asp-for="NewTerm.Name" class="form-control" required />
            <h5 class="pt-2">Summary</h5>
            <textarea rows="1" asp-for="NewTerm.Summary" class="form-control"></textarea>
            <h5 class="pt-2">Technical Definition</h5>
            <textarea rows="3" asp-for="NewTerm.TechnicalDefinition" class="form-control"></textarea>
            <h5 class="pt-2">External Standard Url</h5>
            <input asp-for="NewTerm.ExternalStandardUrl" class="form-control" />
        </form>
    </div>
</div>

