@model Data_Governance_WebApp.Pages.Reports.IndexModel
@{
    var i = 0;
}
<h2 class="pageSection-title">Relationships</h2>
    @if (Model.ReportChildren.Count() > 0) //show nested children model if they exist
    {
        <h4>Reports included in this report.</h4>
        @foreach (var child in Model.ReportChildren)
        {
            <h5>
                <i fav-type="report" object-id="@child.Id" class="favorite far fa-star @child.Favorite mr-3"></i>
                @if (child.RunReportUrl != null)
                {
                    <a class="btn btn-link p-0 atlas-green mr-2" target="_blank" href="@child.RunReportUrl" data-tooltip="Run Report" style="margin-top:-6px;"><i class="fas fa-play"></i></a>
                }
                <a class="card-link ajax atlas-blue" href="Reports?id=@child.Id">@child.Name [@child.EpicMasterFile]</a>
            </h5>

            if (child.Img.Count() == 1)
            {
                <div class="pop ml-5" style="max-height:400px">
                    <img class=" img-responsive" data-src="@child.Img.FirstOrDefault().Src" alt="Image loading.." style="max-width: 78%;max-height: 290px" src="/img/loader.gif" >
                </div>
            } else if (child.Img.Count() > 1)
            {
                <div class="crsl">
                    @foreach (var img in child.Img)
                    {
                        <div class="crsl-itm pop">
                            <img data-src="@img.Src" alt="Image loading.." src="/img/loader.gif"  />
                        </div>
                        i++;
                    }
                    <div class="crsl-ind">
                        @{
                            i = 0;
                        }
                        @foreach(var q in child.Img)
                        {
                            <span  class="crsl-dot @if(i==0){<text> active</text>}" slide="@i"></span>
                            i++;
                        }
                    </div>
                    <a class="crsl-prev">
                        <i class="fas fa-chevron-left fa-lg"></i>
                    </a>
                    <a class="crsl-next">
                        <i class="fas fa-chevron-right fa-lg"></i>
                    </a>
                </div>

            }
            @foreach (var subchild in child.Child)
            {
                <h6>
                    <i fav-type="report" object-id="@subchild.Id" class="favorite far fa-star @subchild.Favorite mr-3"></i>
                    @if (subchild.RunReportUrl != null)
                    {
                        <a class="btn btn-link p-0 atlas-green mr-2" target="_blank"  rel="noopener" href="@subchild.RunReportUrl" data-tooltip="Run Report" style="margin-top:-6px;"><i class="fas fa-play"></i></a>
                    }
                    <a class="card-link" href="Reports?id=@subchild.Id">@subchild.Name [@subchild.EpicMasterFile]</a>
                </h6>

                @foreach (var supersubchild in subchild.GrandChild)
                {
                    <h6 style="margin-left:40px"><a class="card-link" href="Reports?id=@supersubchild.Id">@supersubchild.Name [@supersubchild.EpicMasterFile]</a></h6>
                }
            }
        }
    }

    @if (Model.ReportParents.Count() > 0)
    {
        <h4>Reports that include this report.</h4>
        @foreach (var parent in Model.ReportParents)
        {
            <h5>
                <i fav-type="report" object-id="@parent.Id" class="favorite far fa-star @parent.Favorite mr-3"></i>
                @if (parent.RunReportUrl != null)
                {
                    <a class="btn btn-link p-0 atlas-green mr-2" target="_blank"  rel="noopener" href="@parent.RunReportUrl" data-tooltip="Run Report" style="margin-top:-6px;"><i class="fas fa-play"></i></a>
                }
                <a class="card-link ajax atlas-blue" href="Reports?id=@parent.Id">@parent.Name</a>
            </h5>
            if (parent.Img.Count() == 1)
            {
                <div class="pop text-center" style="max-height:400px">
                    <img class=" img-responsive" data-src="@parent.Img.FirstOrDefault().Src" alt="Image loading.." style="max-width: 78%;max-height: 290px" src="/img/loader.gif" >
                </div>
            } else if (parent.Img.Count() > 1)
            {
                <div class="crsl">
                    @foreach (var img in parent.Img.ToList())
                    {
                        <div class="crsl-itm pop">
                            <img data-src="@img.Src" alt="Image loading.." src="/img/loader.gif"  />
                        </div>
                        i++;
                    }
                    <div class="crsl-ind">
                        @{
                            i = 0;
                        }
                        @foreach(var q in parent.Img.ToList())
                        {
                            <span  class="crsl-dot @if(i==0){<text> active</text>}" slide="@i"></span>
                            i++;
                        }
                    </div>
                    <a class="crsl-prev">
                        <i class="fas fa-chevron-left fa-lg"></i>
                    </a>
                    <a class="crsl-next">
                        <i class="fas fa-chevron-right fa-lg"></i>
                    </a>
                </div>
            }
        }
    }