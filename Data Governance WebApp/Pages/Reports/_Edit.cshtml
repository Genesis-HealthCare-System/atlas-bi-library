@model Data_Governance_WebApp.Pages.Reports.IndexModel

<div class="mdl" id="editModal" tabindex="-1">
    <div class="mdl-d editorMdl">
        <div class="mdl-c editorMdl-inner">
            <div class="editorMdl-title">
                <h2 class="darken editorMdl-titleText">
                    <div class="editor-name">Report Editor</div>
                    <div class="editor-report-title">@Model.Report.Name.Replace("_"," ")</div>
                    <div ><button type="button" class="atlas-blue editorMdl-close" data-dismiss="mdl" data-tooltip="Close">
                        <i class="fas fa-times fa-2x"></i>
                    </button></div>
                </h2>
                <div id="editorMdl-titleSave" class='atlas-blue'>changes saved.</div>
            </div>
            <div class="editorMdl-cnt" ss-container>
                <div style="width:(100% - 40px);margin-left:20px;margin-right:20px">
                    <h2 class="editor-sectionTitle">Images</h2>
    			    <partial name="Editor/_Images" />
                    <h2 class="editor-sectionTitle">Description</h2>
                    <partial name="Editor/_Description" />
                    <partial name="Editor/_Terms" />
                    <partial name="Editor/_Details" />
                    <partial name="Editor/_Maintenance" />
                </div>
            </div>
    	</div>
    </div>
</div>
