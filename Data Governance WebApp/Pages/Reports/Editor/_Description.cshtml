@model Data_Governance_WebApp.Pages.Reports.IndexModel

<h4 class="editor-sectionSubTitle darken">Developer Description</h4>

<div class="editor-description">
    <div class="liveEditor" id="DeveloperDescription">
        <div class="liveEditor-btnGrp">
            <button class="liveEditor-btn darken insert-bold"><i class="fas fa-bold"></i></button>
            <button class="liveEditor-btn darken insert-italic"><i class="fas fa-italic"></i></button>
            <button class="liveEditor-btn darken insert-heading"><i class="fas fa-heading"></i></button>
            <span class="liveEditor-btnSep"></span>
            <button class="liveEditor-btn darken insert-quote"><i class="fas fa-quote-left"></i></button>
            <button class="liveEditor-btn darken insert-code"><i class="fas fa-code"></i></button>
            <span class="liveEditor-btnSep"></span>
            <button class="liveEditor-btn darken insert-ul"><i class="fas fa-list-ul"></i></button>
            <button class="liveEditor-btn darken insert-ol"><i class="fas fa-list-ol"></i></button>
            <span class="liveEditor-btnSep"></span>
            <button class="liveEditor-btn darken insert-link"><i class="fas fa-link"></i></button>
        </div>
         <button type="button" class="liveEditor-btn darken" style="float:right" id="report-edit-description-save-button"><svg class="icon-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M433.941 129.941l-83.882-83.882A48 48 0 0 0 316.118 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h352c26.51 0 48-21.49 48-48V163.882a48 48 0 0 0-14.059-33.941zM224 416c-35.346 0-64-28.654-64-64 0-35.346 28.654-64 64-64s64 28.654 64 64c0 35.346-28.654 64-64 64zm96-304.52V212c0 6.627-5.373 12-12 12H76c-6.627 0-12-5.373-12-12V108c0-6.627 5.373-12 12-12h228.52c3.183 0 6.235 1.264 8.485 3.515l3.48 3.48A11.996 11.996 0 0 1 320 111.48z"/></svg></button>
        <input type="hidden" id="reportEditDevDescrition_ReportId" value="@Model.Report.Id" />
        <div class="liveEditor-body">
            <textarea rows=2 class="form-control markdown-editor" id="ReportObjectDoc_DeveloperDescription" name="ReportObjectDoc.DeveloperDescription">@Model.Report.DeveloperDescription</textarea>
        </div>
    </div>

    <div class="editor-liveEditorPrev">
        <h4 class="editor-liveEditorPrevTtl">Live Preview</h4>
        <div id="dev-desc-editor-preview">
            @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(Model.Report.DeveloperDescription))
        </div>
    </div>
</div>

