@model Data_Governance_WebApp.Pages.Reports.IndexModel
@{
    var m = Model ?? ViewBag;
}
@if (m.ReportMaintLogs.Count > 0)
{
    <h2 class="pageSection-title">Maintenance Logs</h2>
    @foreach (var log in m.ReportMaintLogs)
    {
        <div class="card mb-3 mt-3  maint-log">
            <div class="card-header pb-0 pt-0 d-flex justify-content-between">
                <div class="py-3 my-0">
                    <h6 class="py-0 my-0"><strong>@log.Maintainer</strong><span class="text-muted"> · @log.Date</span></h6>

                </div>
                <h6 class="py-3 my-0">
                    <strong>@log.Status</strong>
                </h6>
            </div>
            @if (log.Comment != null)
            {
                <div class="card-body mb-0">
                    <div class="markdown noleft">
                        @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(log.Comment))
                    </div>
                </div>
            }
        </div>
    }
}

