@model Data_Governance_WebApp.Pages.Reports.IndexModel
@using Helpers

@if(Model != null || ViewBag.DeveloperDescription != null || ViewBag.KeyAssumptions != null || ViewBag.Description != null || ViewBag.SystemDescription != null ) {
	<h2 class="pageSection-title">Description</h2>
}

@if((Model != null && Model.Report.DeveloperDescription != null) || ViewBag.DeveloperDescription != null){
	<h4>Developer Description</h4>
    <div class="markdown">
        @Html.Raw(HtmlHelpers.MarkdownToHtml(Model !=null ? Model.Report.DeveloperDescription : ViewBag.DeveloperDescription))
    </div>
}

@if((Model != null && Model.Report.KeyAssumptions != null) || ViewBag.KeyAssumptions != null){
	<h4>Key Assumptions</h4>
	<div class="markdown">
		@Html.Raw(HtmlHelpers.MarkdownToHtml(Model !=null ? Model.Report.KeyAssumptions : ViewBag.KeyAssumptions))
    </div>
}

@if((Model != null && Model.Report.Description != null) || ViewBag.Description != null){
	<h4>System Description</h4>
	<div class="markdown">
		@(Model != null ? Model.Report.Description : ViewBag.Description)
	</div>
}

@if((Model != null && Model.Report.SystemDescription != null) || ViewBag.SystemDescription != null){
	<h4>System Detailed Description</h4>
	<div class="markdown">
		@(Model != null ? Model.Report.SystemDescription : ViewBag.SystemDescription)
	</div>
}