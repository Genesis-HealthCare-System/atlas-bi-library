@model Data_Governance_WebApp.Pages.AccessControl.IndexModel
@if (Model.Permissions.Contains(1))
{
       <h4 class="small-header darken">Add Privileged User</h4>
        <form method="post" asp-page-handler="AddUserPermission">
            <div class="row py-2 ">
                <div class="col-5">
                    <input type="dynamic-dropdown" asp-for="NewUserRole.UserId" value="" visible-value="" search-area="UserSearch" required />
                </div>
                <div class="col-5">
                    <input type="dynamic-dropdown" asp-for="NewUserRole.UserRolesId" search-area="user-roles" method="fullList" required />
                </div>
                <div class="col-2">
                    <button class='btn btn-link pt-1 mt-1 atlas-blue' type="submit"><svg class="icon-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M433.941 129.941l-83.882-83.882A48 48 0 0 0 316.118 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h352c26.51 0 48-21.49 48-48V163.882a48 48 0 0 0-14.059-33.941zM224 416c-35.346 0-64-28.654-64-64 0-35.346 28.654-64 64-64s64 28.654 64 64c0 35.346-28.654 64-64 64zm96-304.52V212c0 6.627-5.373 12-12 12H76c-6.627 0-12-5.373-12-12V108c0-6.627 5.373-12 12-12h228.52c3.183 0 6.235 1.264 8.485 3.515l3.48 3.48A11.996 11.996 0 0 1 320 111.48z"/></svg></button>
                </div>
            </div>
        </form>

        <h4 class="small-header pt-5 darken">Privileged Users</h4>
        @foreach (var u in Model.PrivilegedUsers)
        {
        <form method="post" asp-page-handler="RemoveUserPermission" class="w-100">
            @foreach (var r in u.Roles)
            {
                <div class="row py-2 border-bottom">
                    <div class="col-5">
                        <h5 class="mb-0 mt-3">@u.Name</h5>
                    </div>
                    <div class="col-5">
                        <input type="hidden" required asp-for="NewUserRole.UserId" value="@u.Id" />
                        <input type="hidden" required asp-for="NewUserRole.UserRolesId" value="@r.Id" />
                        <h5 class="mb-0 mt-3">
                            @r.Name
                        </h5>
                    </div>
                    <div class="col-2">
                        <button class='btn btn-link pt-1 mt-1 atlas-blue' type="submit"><svg class="icon-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16zM53.2 467a48 48 0 0 0 47.9 45h245.8a48 48 0 0 0 47.9-45L416 128H32z"/></svg></button>
                    </div>
                </div>
            }

        </form>
        }

} else {
    <span>You are in the wrong place bro.</span>
}
