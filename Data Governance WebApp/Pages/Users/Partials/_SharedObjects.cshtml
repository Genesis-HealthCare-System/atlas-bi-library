<div class="shared-container">
    @if (ViewBag.SharedToMe.Count > 0)
    {
        <h4>Shared With Me</h4>
        <ul class="home-list">
            @foreach (var o in ViewBag.SharedToMe)
            {
                <li class="home-link" data-tooltip="Shared by @o.SharedFrom on @o.ShareDate">
                    <div class="d-flex justify-content-start">
                        <form class="remove-shared-object" asp-page-handler="RemoveSharedObject" method="post" ><input type="hidden" name="id" value="@o.Id" /><button class="btn btn-link p-0 m-0 mr-2"><i class="fas fa-times"></i></button></form>
                        <a class="ajax atlas-blue" href="@o.Url">@o.Name</a>
                    </div>
                </li>
            }
        </ul>
    }
    @if (ViewBag.SharedFromMe.Count > 0)
    {
        <h4>Shared By Me</h4>
        <ul class="home-list">
            @foreach (var o in ViewBag.SharedFromMe)
            {
                <li class="home-link" data-tooltip="Shared to @o.SharedFrom on @o.ShareDate">
                    <div class="d-flex justify-content-start">
                        <form class="remove-shared-object" asp-page-handler="RemoveSharedObject" method="post"><input type="hidden" name="id" value="@o.Id" /><button class="btn btn-link p-0 m-0 mr-2"><i class="fas fa-times"></i></button></form>
                        <a class="ajax atlas-blue" href="@o.Url">@o.Name</a>
                    </div>
                </li>
            }
        </ul>
    }
    <script>
        (function(){
             if(document.readyState === 'complete') {
    load()
        }

        window.addEventListener('load',function(){
 load()
  })
        function load(){
        if(typeof window.removeShared == 'undefined'){

            window.removeShared = function() {
                document.addEventListener('submit',function(e){
                    if(e.target.closest('.remove-shared-object')) {
                        e.preventDefault();
                        var s = new XMLHttpRequest();
                        s.open('post', e.target.closest('.remove-shared-object').getAttribute('action') + "&" + serialize(e.target.closest('.remove-shared-object')), true);
                        s.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded; charset=UTF-8');
                        s.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
                        s.send();
                        e.target.closest('li.home-link').parentElement.removeChild(e.target.closest('li.home-link'));
                    }
                });
            };

            window.removeShared();
        }
        }
        })();
    </script>
</div>