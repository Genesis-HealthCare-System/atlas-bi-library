@model Atlas_Web.Models.DpDataInitiative

<div class="card">
    <div class="card-header">
        <div class="card-header-title py-2 is-justify-content-space-between">
            <a class="has-text-dark" href="/Initiatives?id=@Model.DataInitiativeId">@Model.Name</a>
            <span class="tags">
                <span class="tag">initiative</span>
            </span>
        </div>
    </div>
    <div class="card-content pt-3 pb-2">
        <div class="media">
            <div class="media-left">
                <figure class="image is-128x128">
                    <picture>
                        <source srcset="/img/report_placeholder_128x128.webp" type="image/webp" loading="lazy">
                        <img src="/img/report_placeholder_128x128.png" alt="placeholder image" loading="lazy">
                    </picture>
                </figure>
            </div>
            <!-- extra wrap if to fix IE11 bug https://github.com/philipwalton/flexbugs#flexbug-3 -->
            <div class="is-flex is-flex-direction-column is-flex-grow-1">
                <div class="media-content is-flex is-justify-content-space-between is-flex-direction-column is-min-h-96">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        @(Model.Description.Substring(0,Math.Min(160,Model.Description.Length)) + " ...")
                    } else {
                        <text>Open to view details.</text>
                    }
                    <div class="tags">
                        @foreach (var d in Model.DpDataProjects)
                        {
                            <span class="tag is-link">@d.Name</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="card-footer">
        <a class="card-footer-item star" data-href="/users/favorites/?handler=Edit&type=initiative&id=@Model.DataInitiativeId">
            <span class="icon-text">
                @if (Model.StarredInitiatives.Any(x => x.Ownerid == ViewBag.PublicUser.UserId))
                {
                    <span class="icon has-text-gold">
                        <i class="fas fa-star"></i>
                    </span>
                    <span>Starred <span class="tag is-rounded">@Model.StarredInitiatives.Count</span></span>
                }
                else
                {
                    <span class="icon ">
                        <i class="far fa-star"></i>
                    </span>
                    <span>Star <span class="tag is-rounded star-count">@Model.StarredInitiatives.Count</span></span>
                }
            </span>
        </a>
        <a href="/Initiatives?id=@Model.DataInitiativeId" class="card-footer-item">Open</a>
    </footer>
</div>
