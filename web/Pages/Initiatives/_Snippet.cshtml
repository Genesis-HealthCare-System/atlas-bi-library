@model Atlas_Web.Models.DpDataInitiative

<div class="card">
    <div class="card-header">
        <p class="card-header-title">
            @Model.Name
        </p>
    </div>
    <div class="card-content">
        <div class="media">
            <div class="media-left">
                <figure class="image is-128x128">
                    <img data-src="/data/img?handler=Placeholder&size=128x128" src="/img/loader.gif" alt="report image" />
                </figure>
            </div>
            <!-- extra wrap if to fix IE11 bug https://github.com/philipwalton/flexbugs#flexbug-3 -->
            <div class="is-flex is-flex-direction-column is-flex-grow-1">
                <div class="media-content is-flex is-justify-content-space-between is-flex-direction-column is-min-h-96">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(Model.Description.Substring(0,Math.Min(160,Model.Description.Length)) + " ..."))
                    } else {
                        <text>Open to view details.</text>
                    }
                    <div class="tags">
                        @foreach (var d in Model.DpDataProjects)
                        {
                            <span class="tag is-link">@d.Name</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="card-footer">
        <a href="/Initiatives?id=@Model.DataInitiativeId" class="card-footer-item">Open</a>
    </footer>
</div>