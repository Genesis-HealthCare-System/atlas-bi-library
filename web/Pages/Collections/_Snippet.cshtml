@model Atlas_Web.Models.DpDataProject

<div class="card">
    <div class="card-header">
        <p class="card-header-title">
            @Model.Name
        </p>
    </div>
    <div class="card-content">
        <div class="media">
            <div class="media-left">
                <figure class="image is-128x128">
                    <picture>
                        <source srcset="/img/report_placeholder_128x128.webp" type="image/webp" loading="lazy">
                        <img src="/img/report_placeholder_128x128.png" alt="placeholder image" loading="lazy">
                    </picture>
                </figure>
            </div>
            <div class="media-content is-min-h-96 is-flex is-justify-content-space-between is-flex-direction-column">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(Model.Description.Substring(0,Math.Min(160,Model.Description.Length)) + " ..."))
                } else {
                    <text>Open to view details.</text>
                }
                @*<div class="tags">
                    @foreach (var d in Model.DpDataProjects)
                    {
                        <span class="tag is-link">@d.Name</span>
                    }
                </div>
                *@
            </div>
        </div>
    </div>
    <footer class="card-footer">
        <a href="/Collections?id=@Model.DataProjectId" class="card-footer-item">Open</a>
    </footer>
</div>