@page
@model Atlas_Web.Pages.Collections.IndexModel
@{
    ViewData["Title"] = "Collections";
}
@section AdBar {}

@if(Model.Collection is null)
{
    @section SideBar {}
    <partial name="_All" />
} else
{
    {
        ViewData["Title"] = @Model.Collection.Name;
    }
        @section Side_Links {
           <partial name="_Nav" />
        }

    <partial name="_Details" />
    <partial name="_Modals" model="Model.Collection" />
}
