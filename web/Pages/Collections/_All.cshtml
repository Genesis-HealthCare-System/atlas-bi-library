@model Atlas_Web.Pages.Collections.IndexModel

<h1 class="title is-1">@ViewData["Title"]</h1>

@if (User.HasPermission("Create Project"))
{
    <div class="field has-addons">
        <p class="control">
            <a href="/Collections/New/" class="button" title="new collection"><span class="icon"><i class="fas fa-plus"></i></span><span>Create a Collection</span></a>
        </p>
    </div>
}

<div class="columns is-multiline">
    @foreach (var p in Model.Collections.ToList())
    {
        <div class="column is-half ">
            <partial name="Collections/_Snippet" model="p" />
        </div>
    }
</div>
