@page
@model Atlas_Web.Pages.Collections.EditModel

@{
    ViewData["Title"] = "Editing " + @Model.Collection.Name;
}

@section SideBar {}
@section SearchBar {}
@section js {
    <script src="/js/flowchart.min.js"></script>
    @*@if(!Request.Headers["User-Agent"].ToString().Contains("Trident")){<script>hljs.highlightAll();</script>}*@
    <script src="/js/editor.min.js"></script>
}

<form action="/Collections/Edit/?id=@Model.Collection.DataProjectId" method="post">
	<h1 class="title is-1">@ViewData["Title"]</h1>

    @*<ul class="steps has-gaps has-content-centered">
      <li class="steps-segment is-active">
        <a class="step-tab has-text-grey-dark" href="#meta">
            <span class="steps-marker is-hollow">
