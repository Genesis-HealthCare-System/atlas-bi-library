@if (ViewBag.AllMail.Count > 0)
{
    var first = ViewBag.AllMail[0].RepId;
    @foreach (var m in ViewBag.AllMail)
    {
        <div class="mlbx-msgsMsg @if(m.RepId == first){<text> active </text>} @if(@m.Read == 0){<text>unread</text>}" data-message-id="@m.MessId" data-rep-id="@m.RepId" data-date="@m.Sent">
            <p class="mlbx-msgsMsgSndr">@m.From<span class="float-right">@m.Sent_Preview</span></p>
            <p class="mlbx-msgsMsgSbj">@m.Subject.Substring(0, Math.Min(m.Subject.Length, 40))</p>
            <p class="mlbx-msgsMsgMsg">@m.Message.Substring(0, Math.Min(m.Message.Length, 40))&#8230;</p>
        </div>
        <div class="mlbx-dvdr"></div>
    }
}
