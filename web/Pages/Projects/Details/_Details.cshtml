@model Atlas_Web.Pages.Projects.IndexModel


@if(Model.DataProject.Description != null)
{
    <h3>Description</h3>
    <div class="markdown">
        @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(Model.DataProject.Description))
    </div>
}

@if(Model.DataProject.Purpose != null)
{
    <h3>Purpose</h3>
    <div class="markdown">
        @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(Model.DataProject.Purpose))
    </div>
}

@if(@Model.DataProject.OpsOwner  != null || @Model.DataProject.ExOwner  != null || @Model.DataProject.AnOwner  != null || @Model.DataProject.DataOwner != null || @Model.DataProject.FnclImpact != null || @Model.DataProject.StrgImport != null)
{
    <h3>Details</h3>
    <div class="listDetails">
        @if(@Model.DataProject.OpsOwner != null)
        {
            <span class="listDetails-title">Operational Owner</span>
            <span>@Model.DataProject.OpsOwner</span>
        }
        @if(@Model.DataProject.ExOwner != null)
        {
            <span class="listDetails-title">Executive Owner</span>
            <span>@Model.DataProject.ExOwner</span>
        }
        @if(@Model.DataProject.AnOwner != null)
        {
            <span class="listDetails-title">Analytics Owner</span>
            <span>@Model.DataProject.AnOwner</span>
        }
        @if(@Model.DataProject.DataOwner != null)
        {
            <span class="listDetails-title">Data Owner</span>
            <span>@Model.DataProject.DataOwner</span>
        }
        @if(@Model.DataProject.FnclImpact != null)
        {
            <span class="listDetails-title">Financial Impact</span>
            <span>@Model.DataProject.FnclImpact</span>
        }
        @if(@Model.DataProject.StrgImport != null)
        {
            <span class="listDetails-title">Strategic Importance</span>
            <span>@Model.DataProject.StrgImport</span>
        }
        <span class="listDetails-title">Last Updated By</span>
        <span>@Model.DataProject.UpdatedBy</span>

        <span class="listDetails-title">Last Updated</span>
        <span>@Model.DataProject.UpdateDate</span>

        @if (Model.DataProject.Hidden == "Y")
    {
        <span class="listDetails-title">Hidden?</span>
        <span>Yes</span>
    }
    </div>
}
