<div>
    @if(ViewBag.NewestApprovedTerms.Count + ViewBag.NewestTerms.Count > 0)
    {
        <h4>Terms</h4>
        @foreach (var term in ViewBag.NewestApprovedTerms)
        {
            <a href="/Terms?id=@term.Id">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" style="margin-right:5px;margin-bottom:-3px"><path d="M173.898 439.404l-166.4-166.4c-9.997-9.997-9.997-26.206 0-36.204l36.203-36.204c9.997-9.998 26.207-9.998 36.204 0L192 312.69 432.095 72.596c9.997-9.997 26.207-9.997 36.204 0l36.203 36.204c9.997 9.997 9.997 26.206 0 36.204l-294.4 294.401c-9.998 9.997-26.207 9.997-36.204-.001z"/></svg>@term.Name.Replace('_', ' ')
            </a>
        }
        @foreach (var term in ViewBag.NewestTerms)
        {
            <a  href="/Terms?id=@term.Id">@term.Name.Replace('_', ' ')</a>
        }
    }
</div>
