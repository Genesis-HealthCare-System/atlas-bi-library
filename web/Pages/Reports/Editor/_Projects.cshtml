@model Atlas_Web.Pages.Reports.IndexModel


<h3>Add Link to Data Project</h3>
<form asp-page="/Reports/Index" asp-page-handler="AddLinkedProject" method="post" id="report-editor-add-new-data-project-form">
    <input asp-for="DpReportAnnotation.ReportId" type="hidden" value="@Model.Report.Id"/>
        <div class="listDetails">

        <label>Project Name</label>
        <input type="dynamic-dropdown" class="head-light" data-head="Name" asp-for="DpReportAnnotation.DataProjectId" value="" visible-value="" search-area="ProjectSearch" />
         </div>

         <h3>Annotation</h3>
    <div class="editor" data-inputName="DpReportAnnotation.Annotation" data-inputId="DpReportAnnotation_Annotation"><textarea></textarea></div>
        <h3><button class="editor-save" type="submit">Save</button></h3>
</form>

<div id="report-editor-currentprojects-container">
    <partial name="Editor/_CurrentProjects" />
</div>
