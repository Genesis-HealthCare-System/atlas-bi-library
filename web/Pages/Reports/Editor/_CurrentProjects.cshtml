@model Atlas_Web.Pages.Reports.IndexModel

@if (ViewBag.RelatedProjects.Count > 0)
{
    <h4>Existing Linked Projects</h4>

  @foreach (var t in ViewBag.RelatedProjects)
    {
        <h4 class="drop" data-toggle="clps" data-target="collapse-reportlink-@(t.Id)">
            Edit <span class="text-green">@t.Name</span> Link
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z" /></svg>
        </h4>

        <div id="collapse-reportlink-@(t.Id)" class="clps">
            <div class="drop-box">
                <h5><a class="drop-link" href="Projects?id=@t.Id">Open This Report</a> / <a class="drop-link" href="/Reports?handler=DeleteLinkedProject&id=@t.AnnotationId" id="report-editor-remove-project-form">Delete This Link</a></h5>

                <form action="/Reports?handler=EditLinkedProject" method="post" id="report-editor-edit-project-form">
                    <input asp-for="DpReportAnnotation.ReportAnnotationId" value="@t.AnnotationId" type="hidden" />
                    <input asp-for="DpReportAnnotation.DataProjectId" value="@t.Id" type="hidden" />
                    <input asp-for="DpReportAnnotation.ReportId" value="@t.ReportId" type="hidden" />

                    <h3>Annotation</h3>
                    <div class="editor" data-inputName="DpReportAnnotation.Annotation" data-inputId="DpReportAnnotation_Annotation"><textarea>@t.Description</textarea></div>

                    <h3><button class="editor-save" type="submit">Save</button></h3>
                </form>
            </div>
        </div>
    }
}
