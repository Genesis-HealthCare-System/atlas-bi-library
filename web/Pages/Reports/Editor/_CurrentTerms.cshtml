 @model Atlas_Web.Pages.Reports.IndexModel
@{
    var ReportTerms = Model.ReportTerms ?? ViewBag.ReportTerms;
}
@if (ReportTerms.Count > 0) {
    <h3>Current Terms</h3>
    @foreach (var t in ReportTerms)
    {
	    <form asp-page-handler="RemoveTermLink" method="post" id="report-editor-remove-term-form">
            <input type="hidden" asp-for="NewTermLink.ReportObjectId" value="@t.ReportId" />
            <input type="hidden" asp-for="NewTermLink.TermId" value="@t.Id" />
            <div class="listDetails">
                <button type="submit" value="Remove" class="btn btn-link text-primary py-0" onclick="return confirm('Are you sure you want to remove this term?');" >
                Delete</button>
                <a asp-page="../Terms/Index" asp-route-id="@(t.Id)">@t.Name</a>
            </div>
        </form>
    }
}
