@{
    Layout = "_Layout";
    ViewBag.Preferences = UserHelpers.GetPreferences(Cache, DbContext, User.Identity.Name);
    ViewBag.SiteMessage = HtmlHelpers.SiteMessage(ViewContext.HttpContext, DbContext);
}


@if (User.HasPermission("Search"))
{
    ViewBag.SearchPlaceholder = "type to search..";

    @if (ViewContext.HttpContext.Request.Path == "/users")
    {
        ViewBag.SearchPlaceholder = "search for users..";
    }
    else if (ViewContext.HttpContext.Request.Path == "/terms")
    {
        ViewBag.SearchPlaceholder = "search for terms..";
    }
    else if (ViewContext.HttpContext.Request.Path == "/collections")
    {
        ViewBag.SearchPlaceholder = "search for collections..";
    }
    else if (ViewContext.HttpContext.Request.Path == "/initiatives")
    {
        ViewBag.SearchPlaceholder = "search for initiatives..";
    }
    else if (ViewContext.HttpContext.Request.Path == "/groups")
    {
        ViewBag.SearchPlaceholder = "search for groups..";
    }
}
