@model Atlas_Web.Pages.Terms.IndexModel

<div class="mdl" id="editModal" tabindex="-1">
    <div class="mdl-d editorMdl">
        <div class="mdl-c editorMdl-inner">
            <div class="editorMdl-title">
                <h2 class="editorMdl-titleText">Editing <span class="text-green">@Model.MyTerm.Name</span><button type="button" class="editorMdl-close" data-dismiss="mdl" data-tooltip="Close">&times;</button></h2>
                <div id="editorMdl-titleSave">changes saved.</div>
            </div>

            <div class="editorMdl-cnt" ss-container>
                <div class="editorMdl-cntLiner">
                    <form asp-page-handler="EditTerm" method="post">
                        <h3>Details</h3>
                        <input asp-for="NewTerm.TermId" type="hidden" value="@Model.MyTerm.Id" />

                        <div class="listDetails">
                            <label>Name</label>
                            <input asp-for="NewTerm.Name" value="@Model.MyTerm.Name"/>
                
                            <label>External Standard Link</label>
                            <input asp-for="NewTerm.ExternalStandardUrl" value="@Model.MyTerm.ExtStdUrl" />
                
                            <label>Valid From</label>
                            <input type="date" asp-for="NewTerm.ValidFromDateTime" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                         
                        <h3>Summary</h3>
                        <div class="editor" data-inputName="NewTerm.Summary" data-inputId="NewTerm_Summary"><textarea>@Html.Raw(Model.MyTerm.Summary)</textarea></div>

                        <h3>Technical Definition</h3>
                        <div class="editor" data-inputName="NewTerm.TechnicalDefinition" data-inputId="NewTerm_TechnicalDefinition"><textarea>@Html.Raw(Model.MyTerm.Definition)</textarea></div>
                           
                        @if (Model.Permissions.Contains(6))
                        {
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" />
                                <label for="approvedYn" class="form-check-label">Approved?</label>
                                <input type="hidden" asp-for="NewTerm.ApprovedYn" value="@Model.MyTerm.Approved">
                            </div>
                        }

                        <h3><button class="editor-save" type="submit">Save</button></h3>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
