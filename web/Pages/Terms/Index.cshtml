@page
@model Atlas_Web.Pages.Terms.IndexModel
@{
    ViewData["Title"] = "Terms";
}
@section AdBar {}

@if (Model.Term is null)
{
     @section SideBar {}
    <partial name="_All" />
}
else
{
    {
        ViewData["Title"] = @Model.Term.Name;
    }

    @section Side_Links
    {
        <partial name="_Nav" />
    }

    <partial name="_Details" />
    <partial name="_Modals" model="Model.Term" />
}
