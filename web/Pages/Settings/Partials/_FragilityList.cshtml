@model Atlas_Web.Pages.Settings.TagsModel
<div>
    @if (ViewBag.Permissions.Contains(33))
    {
        <form asp-page-handler="CreateFragility">
            <div class="field">
                <label class="label">Add More</label>
                <div class="field has-addons">
                    <div class="control">
                        <input type="text" class="input" placeholder="plate glass" asp-for="Fragility.FragilityName" required />
                    </div>
                    <div class="control">
                        <button class="button is-info" type="submit">
                            Save
                        </button>
                    </div>
                </div>
            </div>
        </form>
    }

    <div class="field is-grouped is-grouped-multiline">
        @foreach (var i in ViewBag.FragilityList)
        {
            <div class="control">
                @if (ViewBag.Permissions.Contains(34))
                {
                    <form asp-page-handler="DeleteFragility" class="tags has-addons">
                        <span class="tag is-link">@i.Name</span>
                        <span class="tag is-dark">@i.Used uses</span>
                        <input type="hidden" asp-for="Fragility.FragilityId" value="@i.Id" />
                        <button type="submit" class="tag is-delete"></button>
                    </form>
                } else
                {
                    <div class="tags has-addons">
                        <span class="tag is-link">@i.Name</span>
                        <span class="tag is-dark">@i.Used uses</span>
                    </div>
                }
            </div>
        }
    </div>
</div>
