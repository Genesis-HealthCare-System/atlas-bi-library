@model Atlas_Web.Pages.Settings.IndexModel
<div>
	<h2 class="title is-2">Report Tag ETL</h1>
    <form asp-page-handler="UpdateReportTagsEtl" method="post">
        <div class="field">
            <div class="control report-tags-etl">
                <textarea rows=20 class="textarea" id="GlobalSiteSettings_Value" name="GlobalSiteSettings.Value" placeholder="">@ViewBag.ReportTagEtl</textarea>
            </div>
        </div>
        <div class="is-flex is-justify-content-space-between">
            <div class="control">
                <button class="button is-link">Save Changes</button>
            </div>
            <div class="control">
                <button type="button" class="button report-tags-etl-reset">Reset to Default</button>
            </div>
        </div>
    </form>
</div>
