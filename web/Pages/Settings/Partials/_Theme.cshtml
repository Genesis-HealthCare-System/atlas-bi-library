
@model Atlas_Web.Pages.Settings.IndexModel

<div>
    <h2 class="title is-2">Theme</h1>
    <form asp-page-handler="UpdateGlobalCss" method="post">
        <div class="field">
            <label class="label">Global CSS Styles</label>
            <div class="control">
                <textarea class="textarea" id="GlobalSiteSettings_Value" name="GlobalSiteSettings.Value" placeholder="body { background: pink; }">@ViewBag.GlobalCss</textarea>
            </div>
        </div>
        <div class="control">
            <button class="button is-link">Save Changes</button>
        </div>
    </form>
</div>
