
@model Atlas_Web.Pages.Settings.IndexModel

<div>
    <h1>Search Settings</h1>

    <div class="table-responsive">
        <table class="table sort table-border">
            <thead>
                <tr>
                    <th>Report Type</th>
                    <th>Search Name Override</th>
                    <th>Visible In Basic Search</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.ReportTypes)
                {
    <tr>
        <td>
            @t.Name @if (@t.DefaultEpicMasterFile != null)
            {<span>(@t.DefaultEpicMasterFile)</span>}
        </td>
        <td>@t.ShortName</td>

        <td>
            <div class='form-check' style="width:15px;margin-right:Calc(50% - 15px - 7.5px) !important" typeId="reports" groupId="@t.ReportObjectTypeId">
                <input type="checkbox" class="search-visiblity" @if (t.Visible == "Y") { <text> checked="checked" </text> } />
                <input type="hidden">
            </div>
        </td>

    </tr>}
            </tbody>
        </table>
    </div>


    <div class="table-responsive">
        <table class="table sort table-border">
            <thead>
                <tr>
                    <th>Object Type</th>
                    <th>Visible In Basic Search</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>Users</td>
                    <td>
                        <div class='form-check' style="width:15px;margin-right:Calc(50% - 15px - 7.5px) !important" typeId="users">
                            <input type="checkbox" class="search-visiblity" @if(ViewBag.UserVis != null && ViewBag.UserVis.Value == "Y"){ <text>checked="checked"</text> } />
                            <input type="hidden">
                        </div>
                    </td>

                </tr>
                <tr>
                    <td>Groups</td>
                    <td>
                        <div class='form-check' style="width:15px;margin-right:Calc(50% - 15px - 7.5px) !important" typeId="groups">
                            <input type="checkbox" class="search-visiblity"  @if(ViewBag.GroupVis != null && ViewBag.GroupVis.Value == "Y"){ <text>checked="checked"</text> }  />
                            <input type="hidden">
                        </div>
                    </td>

                </tr>
                <tr>
                    <td>Terms</td>
                    <td>
                        <div class='form-check' style="width:15px;margin-right:Calc(50% - 15px - 7.5px) !important" typeId="terms">
                            <input type="checkbox" class="search-visiblity"  @if(ViewBag.TermVis != null && ViewBag.TermVis.Value == "Y"){ <text>checked="checked"</text> } />
                            <input type="hidden">
                        </div>
                    </td>

                </tr>
                <tr>
                    <td>Initiatives</td>
                    <td>
                        <div class='form-check' style="width:15px;margin-right:Calc(50% - 15px - 7.5px) !important" typeId="initiatives">
                            <input type="checkbox" class="search-visiblity"  @if(ViewBag.InitiativeVis != null && ViewBag.InitiativeVis.Value == "Y"){ <text>checked="checked"</text> }  />
                            <input type="hidden">
                        </div>
                    </td>

                </tr>
                <tr>
                    <td>Collections</td>
                    <td>
                        <div class='form-check' style="width:15px;margin-right:Calc(50% - 15px - 7.5px) !important" typeId="collections">
                            <input type="checkbox" class="search-visiblity"  @if(ViewBag.CollectionVis != null && ViewBag.CollectionVis.Value == "Y"){ <text>checked="checked"</text> }  />
                            <input type="hidden">
                        </div>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>





</div>
